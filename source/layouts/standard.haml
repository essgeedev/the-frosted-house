!!!
%html
  %head
    %meta{ charset: 'utf-8' }

    -# Always force latest IE rendering engine or request Chrome Frame
    %meta{ content: 'IE=edge,chrome=1',  'http-equiv' => 'X-UA-Compatible' }

    -# Enable responsive
    %meta{ name: 'viewport', content: 'width=device-width' }

    -# Use title if it's in the page YAML frontmatter
    %title= current_page.data.title

    = javascript_include_tag 'header'

    = stylesheet_link_tag    'main'

  %body
    = image_tag "environment-banners/#{ENV['RACK_ENV']}-banner.png",
        class: 'environment-banner' unless ENV['RACK_ENV'] == 'production'

    .off-canvas-wrap{ 'data-offcanvas' => true }
      .inner-wrap
        %nav.tab-bar

          %section.right-small
            %a.right-off-canvas-toggle.menu-icon{ href: '#' }
              %span

        %aside.right-off-canvas-menu
          %ul.off-canvas-list
            %li
              %label The Frosted House
            %li= link_to 'Home',      '/'
            %li= link_to 'About',     '/'
            %li= link_to 'Gallery',   '/'
            %li= link_to 'Offerings', '/'
            %li= link_to 'Blog',      '/'
            %li= link_to 'Contact',   '/'

        %section.main-section
          = yield

        = partial 'footer'

      %a.exit-off-canvas

    = javascript_include_tag 'body'
