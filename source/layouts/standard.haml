!!!
%html
  %head
    %meta{ charset: 'utf-8' }

    -# Always force latest IE rendering engine or request Chrome Frame
    %meta{ content: 'IE=edge,chrome=1',  'http-equiv' => 'X-UA-Compatible' }

    -# Enable responsive
    %meta{ name: 'viewport', content: 'width=device-width' }

    -# Use title if it's in the page YAML frontmatter
    %title= current_page.data.title

    = stylesheet_link_tag    'main'

  %body
    = partial 'environment_banner'
    .hide-for-small
      = partial 'top_bar'

    .off-canvas-wrap{ 'data-offcanvas' => true }
      .inner-wrap
        %nav.tab-bar.show-for-small

          %section.tab-bar-section
            = image_tag 'banner.png', class: 'banner banner-smaller'

          %section.right-small
            %a.right-off-canvas-toggle.menu-icon{ href: '#' }
              %span

        %aside.right-off-canvas-menu
          %ul.off-canvas-list
            %li
              %label The Frosted House
            = partial 'nav_list'

        %section.main-section
          .l-content
            = yield

        = partial 'footer'

      %a.exit-off-canvas

    = javascript_include_tag 'body'
